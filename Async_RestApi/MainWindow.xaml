<Window x:Class="Async_RestApi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Async_RestApi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Async Project" FontSize="30"/>
        <Button Content="load Sync" Click="ButtonSync_Click" FontSize="20" Grid.Row="1" Margin="5"/>
        <Button Content="load Async" Click="ButtonASync_Click" FontSize="20" Grid.Row="2" Margin="5"/>
        
        <TextBlock x:Name="textBlockInfo" Text="Info" Grid.Row="3" Margin="5"/>

    </Grid>
</Window>
